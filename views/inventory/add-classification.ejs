<div class="title-container">
    <% if (title) { %>
        <div class="content__heading"><h1><%= title %></h1></div>
        <%- messages() %>
        <% } else {
            res.redirect('/')
        } %>
</div>

<div class="message-container">
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
</div>

<div class="main">
    <!-- Block: login-container -->
    <div class="add-classification-container form-container">
        <!-- Block: login-form -->
        <form action="/inv/add-classification" method="post" class="add-classification-form">
            <!-- Block Element: login-form__container -->
            <div class="add-classification-form__container">
                <fieldset>
                    <legend>Classification Information</legend>
                    <!-- Block Element: login-form__field -->
                    <div class="add-classification-form__field">
                        <!-- Element within Block: form__label -->
                        <label for="classification_name" class="form__label">Classification Name:</label>
                        <!-- Element within Block: form__input -->
                        <input type="text" placeholder="Enter the classification name" name="classification_name" class="form__input" required>
                        <span class="form__hint">Note: Classification Name cannot contain a space or special characters of any kind.</span>
                    </div>
                </fieldset>

                <!-- Element within Block: btn -->
                <button type="submit" class="form__button">Add New Classification</button>

                <!-- Element within Block: form__register -->
                <span class="form__add-classification form-footer-link"><div>Adding new inventory? <a href="add-inventory" class="form__register-link">Add Vehicle</a></div></span>
            </div>
        </form>
    </div>
</div>